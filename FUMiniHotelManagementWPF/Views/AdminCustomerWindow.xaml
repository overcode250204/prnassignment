<Window x:Class="FUMiniHotelManagementWPF.Views.AdminCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagementWPF.Views"
        mc:Ignorable="d"
        Title="Quản Lí Khách Hàng" Height="500" Width="900" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="CustomerDataGrid" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                  AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="60"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding CustomerFullName}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="150"/>
                <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Telephone}" Width="120"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding CustomerBirthday, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding CustomerStatus}" Width="100"/>
                <DataGridTextColumn Header="Mật khẩu" Binding="{Binding Password}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="200" Margin="0,0,10,0" Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Tìm" Command="{Binding SearchCommand}" Width="80"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
            <Button Content="Thêm" Command="{Binding AddCommand}" Width="80" Margin="5"/>
            <Button Content="Sửa" Command="{Binding EditCommand}" Width="80" Margin="5"/>
            <Button Content="Xóa" Command="{Binding DeleteCommand}" Width="80" Margin="5"/>
            <Button Content="Làm mới" Command="{Binding RefreshCommand}" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
