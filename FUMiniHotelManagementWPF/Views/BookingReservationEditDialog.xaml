<Window x:Class="FUMiniHotelManagementWPF.Views.BookingReservationEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagementWPF.Views"
        mc:Ignorable="d"
        Title="Chỉnh sửa đặt phòng" Height="650" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Khách hàng (ID):"/>
            <TextBox Text="{Binding CustomerId, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Ngày đặt:"/>
            <DatePicker SelectedDate="{Binding BookingDate, Mode=TwoWay}"/>

            <Label Content="Tổng tiền:"/>
            <TextBox Text="{Binding TotalPrice, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Trạng thái:"/>
            <ComboBox SelectedValue="{Binding BookingStatus, Mode=TwoWay}" SelectedValuePath="Tag">
                <ComboBoxItem Content="Đang xử lý" Tag="0"/>
                <ComboBoxItem Content="Đã xác nhận" Tag="1"/>
                <ComboBoxItem Content="Đã hủy" Tag="2"/>
            </ComboBox>



            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" IsDefault="True" Command="{Binding SaveCommand}"/>
            <Button Content="Hủy" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
