<Window x:Class="FUMiniHotelManagementWPF.Views.BookingReservationEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagementWPF.Views"
        mc:Ignorable="d"
        Title="Chỉnh sửa đặt phòng" Height="650" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Khách hàng:"/>
            <ComboBox ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding CustomerFullName}"/>
                            <TextBlock Text=" - "/>
                            <TextBlock Text="{Binding Telephone}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Label Content="Ngày đặt:"/>
            <TextBox Text="{Binding BookingDate, StringFormat=dd/MM/yyyy}" IsReadOnly="True"/>

            <Label Content="Tổng tiền:"/>
            <TextBox Text="{Binding TotalPrice, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Trạng thái:"/>
            <ComboBox SelectedValue="{Binding BookingStatus, Mode=TwoWay}" SelectedValuePath="Tag">
                <ComboBoxItem Content="Đã xác nhận" Tag="1"/>
                <ComboBoxItem Content="Đã hủy" Tag="0"/>
            </ComboBox>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" IsDefault="True" Command="{Binding SaveCommand}"/>
            <Button Content="Hủy" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
