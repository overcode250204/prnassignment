<Window x:Class="FUMiniHotelManagementWPF.Views.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagementWPF.Views"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="WelcomeText" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="Account" Content="Tài khoản" Width="200" Height="40" Margin="0 30 0 0" Click="Account_Click"  />
            <Button Name="History" Content="Lịch sử đặt phòng" Width="200" Height="40" Margin="0 10 0 0" Click="History_Click"  />
            <Button Content="Đăng xuất" Width="200" Height="40" Margin="0 30 0 0" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
