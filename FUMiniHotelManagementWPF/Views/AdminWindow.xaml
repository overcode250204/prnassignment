<Window x:Class="FUMiniHotelManagementWPF.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagementWPF.Views"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome, Admin!" FontSize="20" HorizontalAlignment="Center"/>
            <Button Content="Quản lý khách hàng" Width="200" Height="40" Margin="0,30,0,0" Click="ManageCustomer_Click"/>
            <Button Content="Quản lý phòng" Width="200" Height="40" Margin="0,10,0,0" Click="ManageRoom_Click"/>
            <Button Content="Quản lý đặt phòng" Width="200" Height="40" Margin="0,10,0,0" Click="ManageBooking_Click"/>
        </StackPanel>
    </Grid>
</Window>
