<Window x:Class="FUMiniHotelManagementWPF.Views.RoomEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagementWPF.Views"
        mc:Ignorable="d"
        Title="RoomEditDialog" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Số phòng:"/>
            <TextBox Text="{Binding RoomNumber, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Loại phòng:"/>
            <ComboBox ItemsSource="{Binding RoomTypes}" DisplayMemberPath="RoomTypeName" SelectedItem="{Binding SelectedRoomType, Mode=TwoWay}"/>

            <Label Content="Mô tả phòng:"/>
            <TextBox Text="{Binding RoomDetailDescription, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Sức chứa tối đa:"/>
            <TextBox Text="{Binding RoomMaxCapacity, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Giá/ngày:"/>
            <TextBox Text="{Binding RoomPricePerDay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Trạng thái:"/>
            <ComboBox SelectedValue="{Binding RoomStatus, Mode=TwoWay}" SelectedValuePath="Tag">
                <ComboBoxItem Content="Hoạt động" Tag="1"/>
                <ComboBoxItem Content="Ngừng hoạt động" Tag="0"/>
            </ComboBox>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" IsDefault="True" Command="{Binding SaveCommand}"/>
            <Button Content="Hủy" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
