<Window x:Class="FUMiniHotelManagementWPF.Views.BookingDetailEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagementWPF.Views"
        mc:Ignorable="d"
        Title="Chỉnh sửa chi tiết đặt phòng" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Phòng (ID):"/>
            <ComboBox ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomId"/>

            <Label Content="Giá thực tế:"/>
            <TextBox Text="{Binding ActualPrice, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Ngày bắt đầu:"/>
            <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}"/>

            <Label Content="Ngày kết thúc:"/>
            <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay}"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" IsDefault="True" Command="{Binding SaveCommand}"/>
            <Button Content="Hủy" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
